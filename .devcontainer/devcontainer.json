{
    "name": "F1Tenth Sim Container",
    "privileged": true,
    "remoteUser": "ros",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "ros"
        }
    },
    "workspaceFolder": "/home/sim",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/sim,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e", "DISPLAY=${env:DISPLAY}"
    ],
    "mounts": [
       "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached"
    ],
    "postCreateCommand": "sudo rosdep update && sudo apt-get update && sudo rosdep install --from-paths sim_ws/src --ignore-src -y && sudo chown -R $(whoami) /home/sim/ && cd sim_ws && colcon build && cd /home/sim/f1tenth_gym && pip3 install -e ."
}